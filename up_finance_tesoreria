		DECLARE @TCC TABLE (Dia int, Fecha date, Moneda varchar(50), Valor numeric(18,4))
		DECLARE @Dia INT = 1
			WHILE @Dia<=@UltDay
			BEGIN
				DECLARE @DIAD DATE = CAST(CAST(@Anio AS varchar(4)) + '-' + CAST(@Mes AS VARCHAR(2)) + '-' + CAST(@Dia AS VARCHAR(2))  AS date)
